<h1>Lessons</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Video</th>
    <th>Download PDF</th>
    <th>Play Audio</th>
  </tr>

  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.title %></td>
      <td><%= lesson.description %></td>
      <td><%= render 'layouts/videos' %></td>
      <td><%= lesson.image_file_name %></td>
      <td><%= lesson.mp3_file_name %></td>
      <td><%= link_to 'Show', lesson_path(lesson) %></td>
    </tr>
  <% end %>
</table>
