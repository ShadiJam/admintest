

<h1>Lessons</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Video</th>
    <th>Download</th>
  </tr>

  <% @lesson.each do |lesson| %>
    <tr>
      <td><%= lesson.title %></td>
      <td><%= lesson.description %></td>
      <td><%= render 'layouts/video_show' %></td>
      <td><%= link_to "Download", lesson.image.url(:original, false) %></td>
      <td><%= link_to 'Show', lesson_path(lesson) %></td>

    </tr>
  <% end %>
</table>
