<!DOCTYPE html>
<html>
  <head>
    <title>Admintest</title>
    <%= csrf_meta_tags %>

     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
     <div class="navbar-fixed">
       <nav>
         <div class="nav-wrapper">
           <a href="/" class="brand-logo">Study Steel</a>
         <ul class="right">
           <% if user_signed_in? %>
             <li><a href="/">Home</a></li>
             <li><%= link_to 'Categories', categories_path %></li>
             <% if current_user.admin? %>
                <li><%= link_to 'Admin Dashboard', rails_admin_path %></li>
             <% end %>
             <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
          <% else %>
            <li><a href="/">Home</a></li>
            <li><%= link_to 'Categories', categories_path %></li>
            <li><a href="/">Contact</a></li>
            <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
            <li><%= link_to "Log In", new_user_session_path, method: :get, :class => 'navbar-link'  %></li>
          <% end %>
         </ul>
       </div>
     </nav>
   </div>
 </nav>


    <%= yield %>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text" id="forget">More Information</h5>
            <p class="forget">Some more info<br>lots of info</p>
            <p class="grey-text text-lighten-4"></p>


          </div>
          <div class="col l3 s12">
            <h5 class="white-text">Resources</h5>
            <ul>
              <li><a class="white-text" href="">Some Link</a></li>
              <li><a class="white-text" href="">Some Link</a></li>
              <li><a class="white-text" href="">Some Link</a></li>
            </ul>
          </div>
          <div class="col l3 s12">
            <h5 class="white-text">Contact Info</h5>
            <ul>
              <li><a class="white-text" href="">Email</a></li>
              <li><a class="white-text" href="">Phone</a></li>
            </ul>
          </div>
        </div>
      </div>
        <div class="footer-copyright">
            <p class="foot">Will Van Horn Productions</p>
        </div>
    </footer>
  </body>
</html>
